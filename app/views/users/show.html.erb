<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <div>
          <%= @user.name %>
        </div>
        <%= @user.created_at %>
        <%= @user.updated_at %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @microposts.any? %>
      <h3>
        <%= t ".micropost" %>
        (<%= @microposts.count %>)
      </h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%== pagy_nav(@pagy) %>
    <% end %>
  </div>
</div>
