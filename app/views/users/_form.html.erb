<%= form_for(@user) do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>
  <%= f.label :email %>
  <%= f.email_field :email, class: "form-control" %>
  <%= f.label :password %>
  <%= f.password_field :password, class: "form-control" %>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, class: "form-control" %>
  <%= f.label :birthday, t("sign_up_form.birthday") %>
  <%= f.text_field :birthday, class: "form-control", type: "date" %>
  <%= f.label :gender, t("sign_up_form.gender") %>
  <%= f.select :gender, options_for_select(Settings.form.option_gender, selected: :gender) %>
  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
